@model WeatherForecastApp.Models.City

@{
	ViewData["Title"] = "City";
}

<div class="container">
	<div class="container">
		<div class="form-group coll-md-offset-3 col-md-5">
			<h2>Forecast For Selected City</h2>
			
			<label asp-for="Name"></label>
			<span class="bafge alert-primary">@Model.Name</span> <br />

			<label asp-for="Temperature"></label>
			<span class="bafge alert-primary">@Model.Temperature°</span> <br />

			<label asp-for="Humidity"></label>
			<span class="bafge alert-primary">@Model.Humidity</span> <br />

			<label asp-for="Pressure"></label>
			<span class="bafge alert-primary">@Model.Pressure Hpa</span> <br />

			<label asp-for="Wind"></label>
			<span class="bafge alert-primary">@Model.Wind</span> <br />

			<label asp-for="Weather"></label>
			<span class="bafge alert-primary">@Model.Weather</span> <br />

			<form method="get">
				<button asp-controller="WeatherForecast" asp-action="SearchByCity" class="btn btn-primary">Go Back</button>
			</form>
		</div>
	</div>
</div>